<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Company Details</title>
    <link rel="stylesheet" href="/company.css">
</head>

<body>
    <div class="container">
        <h1>Company Details</h1>

        <!-- Form to Add New Company -->
        <form action="/company/companyRoute" method="POST">
            <label for="name">Company Name:</label>
            <input type="text" id="name" name="name" required>

            <label for="address">Address:</label>
            <input type="text" id="address" name="address" required>

            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>

            <label for="phone">Phone:</label>
            <input type="text" id="phone" name="phone" required>

            <label for="industry">Industry:</label>
            <input type="text" id="industry" name="industry" required>

            <label for="company_gst">GST Number:</label>
            <input type="text" id="company_gst" name="company_gst" required>

            <label for="is_active">Is Active:</label>
            <select id="is_active" name="is_active" required>
                <option value="y">Yes</option>
                <option value="n">No</option>
            </select>

            <button type="submit">Add Company</button>
        </form>

        <!-- Table Displaying Company Details -->
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Industry</th>
                    <th>GST</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                    <th>Active</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(company=> { %>
                    <tr>
                        <td>
                            <%= company.company_id %>
                        </td>
                        <td>
                            <%= company.name %>
                        </td>
                        <td>
                            <%= company.address %>
                        </td>
                        <td>
                            <%= company.email %>
                        </td>
                        <td>
                            <%= company.phone %>
                        </td>
                        <td>
                            <%= company.industry %>
                        </td>
                        <td>
                            <%= company.company_gst %>
                        </td>
                        <td>
                            <%= new Date(company.created_at).toLocaleString() %>
                        </td>
                        <td>
                            <%= new Date(company.updated_at).toLocaleString() %>
                        </td>
                        <td class="<%= company.is_active === 'y' ? 'is-active-yes' : 'is-active-no' %>">
                            <%= company.is_active==='y' ? 'Yes' : 'No' %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
</body>

</html>




















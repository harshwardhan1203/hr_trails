<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Person Details</title>
    <link rel="stylesheet" href="/person.css">
</head>

<body>
    <div class="container">
        <h1>Person Details</h1>

        <div class="form-container">
            <h2>Insert Person Data</h2>
            <form action="/person/personRoute" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" placeholder="Enter name" required>
                </div>

                <div class="form-group">
                    <label for="relationship">Relationship</label>
                    <input type="text" id="relationship" name="relationship" placeholder="Enter relationship" required>
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="Enter email" required>
                </div>

                <div class="form-group">
                    <label for="address">Address</label>
                    <textarea id="address" name="address" placeholder="Enter address" required></textarea>
                </div>

                <div class="form-group">
                    <label for="is_active">
                        <input type="checkbox" id="is_active" name="is_active"> Active
                    </label>
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" placeholder="Enter password" required>
                </div>

                <div class="form-actions">
                    <button type="submit">Submit</button>
                </div>
            </form>
        </div>

        <table>
            <thead>
                <tr>
                    <th>Person ID</th>
                    <th>Name</th>
                    <th>Relationship</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                    <th>Active</th>
                    <th>Password</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(person=> { %>
                    <tr>
                        <td>
                            <%= person.person_id %>
                        </td>
                        <td>
                            <%= person.name %>
                        </td>
                        <td>
                            <%= person.relationship %>
                        </td>
                        <td>
                            <%= person.email %>
                        </td>
                        <td>
                            <%= person.address %>
                        </td>
                        <td>
                            <%= person.created_at %>
                        </td>
                        <td>
                            <%= person.updated_at %>
                        </td>
                        <td class="<%= person.is_active === 'y' ? 'is-active-yes' : 'is-active-no' %>">
                            <%= person.is_active==='y' ? 'Yes' : 'No' %>
                        </td>
                        <td>
                            <%= person.password ? person.password : 'N/A' %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
</body>

</html>




























